{
  "engines": {
    "yarn": "~1.0.20"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "fs-extra": "^3.0.1",
    "husky": "^0.13.4",
    "lerna": "2.0.0-rc.5",
    "lint-staged": "^3.4.0",
    "prettier": "^1.1.0",
    "tradie-template-node-package": "next",
    "validate-commit-msg": "^2.12.1"
  },
  "scripts": {
    "clean": "lerna run clean && lerna clean",
    "bootstrap": "lerna bootstrap --npm-client=yarn && node scripts/symlink-tradie.js",
    "dep-check": "lerna exec --concurrency 1 -- npm-check -u",
    "commit": "git-cz",
    "build": "lerna run build",
    "test": "lerna run test",
    "publish": "lerna publish --conventional-commits --canary -m 'chore: publish' --npm-tag=next",
    "prepublish": "yarn run build && yarn run test",
    "commitmsg": "validate-commit-msg",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --tab-width 2 --single-quote true --trailing-comma none --bracket-spacing false --jsx-bracket-same-line false --semi true",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
