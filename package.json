{
  "name": "tradie-monorepo",
  "private": true,
  "engines": {
    "yarn": "^1.0.0",
    "node": "^8.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^4.3.0",
    "@commitlint/config-angular": "^4.3.0",
    "@commitlint/prompt-cli": "^4.3.0",
    "fs-extra": "^4.0.2",
    "husky": "^0.14.3",
    "lerna": "^2.0.0",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "resolve": "^1.4.0",
    "tradie-template-node-package": "2.0.0-alpha.22f158e7"
  },
  "scripts": {
    "clean": "lerna run clean && lerna clean",
    "bootstrap": "lerna bootstrap && node scripts/symlink-tradie.js",
    "upgrade": "lerna exec --concurrency 1 -- npm-check -u",
    "commit": "commit",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "test": "lerna run test",
    "publish": "yarn run lint && yarn run build && lerna publish --canary --exact --force",
    "commitmsg": "commitlint -e",
    "precommit": "lint-staged",
    "prepublishOnly": "echo 'Run `npm run publish` instead.' && exit 1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --tab-width 2 --single-quote true --trailing-comma none --bracket-spacing false --jsx-bracket-same-line false --semi true",
      "git add"
    ]
  }
}
